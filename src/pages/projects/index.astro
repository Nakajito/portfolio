---
import Layout from "@/layouts/Layout.astro";
import projects from "@/data/projects";
import ProjectCard from "@/components/ProjectCard.astro";
---

<Layout title="Daniel Bonilla | Projects">
  <h1 class="text-3xl font-bold py-4 text-center">Proyectos</h1>

  <div class="flex flex-col items-center min-h-screen w-full px-6">
    {projects.length === 0 ? (
      <p class="text-lg text-gray-500 text-center">Soon, stay connected ðŸ‘€...</p>
    ) : (
      <div class="grid grid-cols-1 gap-6 py-6 sm:grid-cols-2 lg:grid-cols-3 w-full max-w-screen-lg">
        {projects.map((project) => (
          <ProjectCard {...project} />
        ))}
      </div>
    )}
  </div>
</Layout>
